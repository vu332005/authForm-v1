{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Tắt hoặc xóa dòng này đi vì nó gây xung đột khi dùng commonjs
    "verbatimModuleSyntax": false ,
  }
}